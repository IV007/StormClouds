<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/clear_day_bg_gradient">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/proceedButton"
        android:text="proceed"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="#FF459FDC"
        android:background="#ffffffff"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Location"
        android:id="@+id/locationTextView"
        android:layout_weight="10"
        android:textSize="22sp"
        android:layout_gravity="center_vertical"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout3"
    android:layout_below="@+id/locationTextView"
    android:orientation="horizontal"
    android:gravity="right">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LOCATION_GET_LOCATION_BUTTON"
        android:textAllCaps="false"
        android:id="@+id/locationButton"
        android:textColor="#FF459FDC"
        android:background="#ffffffff"
        android:layout_marginRight="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LOCATION_ADD"
        android:textAllCaps="false"
        android:id="@+id/addLocationButton"
        android:background="#ffffffff"
        android:textColor="#FF459FDC"
        />

</LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@android:id/list"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout3"
        android:layout_above="@+id/proceedButton"/>

    <TextView
        android:drawableTop="@drawable/ic_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LOCATION_LISTVIEW_EMPTY"
        android:id="@android:id/empty"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:textSize="20sp"/>
</RelativeLayout>
