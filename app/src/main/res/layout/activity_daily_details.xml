<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_daily_details_margin_left"
                android:paddingStart="@dimen/activity_daily_details_margin_left"
                android:paddingEnd="0dp"
                android:paddingTop="@dimen/activity_daily_details_margin_top"
                tools:context="sidelance.com.stormclouds.modules.daily.DailyDetailsActivity"
    android:background="@drawable/clear_day_bg_gradient">

    <TextView
        android:text="Getting Conditions..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dailyDetailsLabel"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:typeface="serif"
        android:textStyle="italic"
        android:ellipsize="end"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/minTempLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomorrow"
        android:id="@+id/detailsDayLabel"
        android:textSize="24sp"
        android:typeface="serif"
        android:textStyle="bold|italic"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="December 31"
        android:id="@+id/timeDetailsLabel"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/detailsDayLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity:"
            android:id="@+id/mHumidityLabel"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:paddingTop="4dp"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/minTempLabel"
            android:layout_alignRight="@+id/timeDetailsLabel"
            android:layout_alignEnd="@+id/timeDetailsLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pressure:"
        android:id="@+id/mPressureLabel"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:paddingTop="4dp"
        android:gravity="center"
        android:layout_alignLeft="@+id/mHumidityLabel"
        android:layout_alignStart="@+id/mHumidityLabel"
        android:layout_below="@+id/mHumidityLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind:"
        android:id="@+id/mWindLabel"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:paddingTop="4dp"
        android:gravity="center"
        android:layout_below="@+id/mPressureLabel"
        android:layout_alignRight="@+id/mPressureLabel"
        android:layout_alignEnd="@+id/mPressureLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:id="@+id/minTempLabel"
        android:textSize="48sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/mHumidityLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:id="@+id/maxTempLabel"
        android:textSize="96sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/dailyIcon"
        android:layout_alignLeft="@+id/mHumidityLabel"
        android:layout_alignStart="@+id/mHumidityLabel"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dailyIcon"
        android:src="@drawable/art_clear"
        android:scaleType="fitXY"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/degree"
        android:layout_alignTop="@+id/dailyIcon"
        android:layout_toLeftOf="@+id/dailyIcon"
        android:layout_toStartOf="@+id/dailyIcon"
        android:layout_marginTop="19dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/degree"
        android:layout_alignTop="@+id/minTempLabel"
        android:layout_toRightOf="@+id/minTempLabel"
        android:layout_toEndOf="@+id/minTempLabel"/>


</RelativeLayout>
